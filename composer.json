{
    "name": "pbiering/rcguard",
    "type": "roundcube-plugin",
    "description": "Roundcube plugin that enforces requirement of solving a Captcha during login",
    "keywords": ["mail","roundcube","security","captcha"],
    "homepage": "https://github.com/pbiering/roundcube-rcguard",
    "version": "1.4.0",
    "license": "GPL-3.0+",
    "authors": [
        {
            "name": "Peter Bieringer",
            "email": "pb@bieringer.de",
            "homepage": "https://github.com/pbiering",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://plugins.roundcube.net"
        }
    ],
    "require": {
        "php": ">=5.4",
        "roundcube/plugin-installer": ">=0.1.3"
    },
    "scripts": {
        "lint": "php-cs-fixer -v fix --diff --diff-format udiff --dry-run",
        "fix": "php-cs-fixer fix"
    },
    "extra": {
        "roundcube": {
            "min-version": "1.1",
            "sql-dir": "SQL"
        }
    }
}
